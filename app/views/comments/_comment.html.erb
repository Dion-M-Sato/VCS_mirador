<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(User.find_by(id:comment.user_id), size: 50), User.find_by(id:comment.user_id) %>
  <span class="book"><%= User.find_by(id:comment.user_id).name %></span>
  <span class="content"><%= comment.content %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
</li>
